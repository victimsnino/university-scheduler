<decorators>
    <decorator name='_for_corpuses'>
        <for source='self.university.corpuses'>
            <variable name='corpus_i' />
        </for>
    </decorator>
    <decorator name='_for_week_and_day'>
        <for source='self.university.study_weeks_and_days'>
            <variable name='week_i' />
            <variable name='day_i' />
        </for>
    </decorator>    
    <decorator name='_for_week_only'>
        <for source='range(self.university.study_weeks)'>
            <variable name='week_i' />
        </for>
    </decorator>    
    <decorator name='_for_day_only'>
        <for source='self.university.study_days'>
            <variable name='day_i' />
        </for>
    </decorator>    
    <decorator name='_for_timeslots'>
        <for source='range(global_config.time_slots_per_day_available)'>
            <variable name='timeslot_i' />
        </for>
    </decorator>    
    <decorator name='_for_rooms'>
        <for source='self.university.corpuses'>
            <variable name='corpus_i' />
        </for>        
        <for source='self.university.corpuses[corpus_i]'>
            <variable name='room' column = 'room_i' use_as='room.room_number'/>
        </for>
    </decorator>
    <decorator name='_for_groups_or_teachers'>
        <for source='self._get_groups_teachers_list()'>
            <variable name='container' />
            <variable name='format_out' />
            <variable name='column' />
        </for>
        <for source='enumerate(container)'>
            <variable name='ith' />
            <variable name='teacher_or_group' />
        </for>
    </decorator> 
    <decorator name='_for_lessons'>
        <for source='enumerate(self.university.lessons)'>
            <variable name='lesson_i' />
            <variable name='lesson' />
        </for>
    </decorator> 
    <decorator name='get_timeslots' source='source' function='_get_time_slot_tracker_by_filter'>
        <temp_variable name='week_i' default="r'.*'"/>
        <temp_variable name='day_i' default="r'.*'"/>
        <temp_variable name='corpus_i' default="r'.*'"/>
        <temp_variable name='room_i' default="r'.*'"/>
        <temp_variable name='timeslot_i' default="r'.*'"/>
        <temp_variable name='lesson_i' default="r'.*'"/>
        <temp_variable name='type_i' default="r'.*'"/>
        <temp_variable name='column' default="None"/>
        <temp_variable name='ith' default="None"/>
    </decorator> 
    <decorator name='get_corpus_tracker' source='corpus_tracker_source' function='_get_corpus_tracker_by_filter'>
        <temp_variable name='week_i' default="r'.*'"/>
        <temp_variable name='day_i' default="r'.*'"/>
        <temp_variable name='corpus_i' default="r'.*'"/>
        <temp_variable name='column' default="None"/>
        <temp_variable name='ith' default="None"/>
    </decorator>     
    <decorator name='get_room_tracker' source='room_tracker_source' function='_get_room_tracker_by_filter'>
        <temp_variable name='room_i' default="r'.*'"/>
        <temp_variable name='week_i' default="r'.*'"/>
        <temp_variable name='day_i' default="r'.*'"/>
        <temp_variable name='corpus_i' default="r'.*'"/>
        <temp_variable name='column' default="None"/>
        <temp_variable name='ith' default="None"/>
    </decorator>     
    <decorator name='get_lesson_tracker' source='lesson_tracker_source' function='get_lesson_tracker_by_filter'>
        <temp_variable name='week_i' default="r'.*'"/>
        <temp_variable name='day_i' default="r'.*'"/>
        <temp_variable name='lesson_i' default="r'.*'"/>
        <temp_variable name='column' default="None"/>
        <temp_variable name='ith' default="None"/>
    </decorator> 
</decorators>